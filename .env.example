# ==============================================
# Mahavishnu Portfolio — Environment Variables
# ==============================================
# Copy this file to .env and fill in the values.

# ---------- Database (Supabase PostgreSQL) ----------
# Connection-pooled URL (used by Prisma at runtime)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?pgbouncer=true"
# Direct connection URL (used by Prisma for migrations)
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ---------- Supabase ----------
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"

# ---------- Site ----------
# Optional — defaults to https://mahavishnudevhub.com
# On Vercel this is auto-set via VERCEL_PROJECT_PRODUCTION_URL if not provided.
NEXT_PUBLIC_SITE_URL="https://mahavishnudevhub.com"